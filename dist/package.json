{
  "name": "runes-webkit",
  "version": "0.4.4",
  "description": "A collection of reusable Svelte components for building  user interfaces for Runes.",
  "license": "MIT",
  "homepage": "https://runes-webkit.codewithshin.com/",
  "author": {
    "name": "Shinichi Okada",
    "email": "connect@codewithshin.com",
    "url": "https://blog.codewithshin.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/shinokada/runes-webkit"
  },
  "engines": {
    "npm": ">=7.0.0",
    "node": ">=18.0.0"
  },
  "bugs": "https://github.com/shinokada/runes-webkit/issues",
  "scripts": {
    "dev": "vite dev",
    "build": "vite build && npm run package",
    "preview": "vite preview",
    "package": "svelte-kit sync && svelte-package && publint",
    "prepublishOnly": "npm run package",
    "test": "npm run test:integration && npm run test:unit",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "prettier --check . && eslint .",
    "format": "prettier --write .",
    "test:integration": "playwright test",
    "test:unit": "vitest",
    "gen:exports": "svelte-lib-helpers exports",
    "copy:packagejson": "svelte-lib-helpers package",
    "gen:docs5": "svelte-lib-helpers docs5FromType",
    "lib-helpers": "npm run gen:docs5 && npm run package && npm run copy:packagejson"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@playwright/test": "^1.43.0",
    "@sveltejs/adapter-auto": "^3.2.0",
    "@sveltejs/kit": "^2.5.5",
    "@sveltejs/package": "^2.3.1",
    "@sveltejs/vite-plugin-svelte": "^3.0.2",
    "@svitejs/changesets-changelog-github-compact": "^1.1.0",
    "@types/eslint": "^8.56.7",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "autoprefixer": "^10.4.19",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-svelte": "2.36.0-next.9",
    "highlight.js": "^11.9.0",
    "postcss": "^8.4.38",
    "postcss-load-config": "^5.0.3",
    "prettier": "^3.2.5",
    "prettier-plugin-svelte": "^3.2.2",
    "prettier-plugin-tailwindcss": "^0.5.13",
    "publint": "^0.2.7",
    "svelte": "5.0.0-next.95",
    "svelte-5-ui-lib": "^0.4.4",
    "svelte-check": "^3.6.9",
    "svelte-lib-helpers": "^0.4.5",
    "svelte-preprocess": "^5.1.3",
    "svelte-rune-highlight": "^0.5.6",
    "tailwind-merge": "^2.2.2",
    "tailwindcss": "^3.4.3",
    "tslib": "^2.6.2",
    "typescript": "^5.4.4",
    "vite": "^5.2.8",
    "vitest": "^1.4.0"
  },
  "files": [
    "dist",
    "!dist/**/*.test.*",
    "!dist/**/*.spec.*"
  ],
  "peerDependencies": {
    "@sveltejs/kit": "^2.5.5",
    "svelte": "^5.0.0-next.95"
  },
  "svelte": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "type": "module",
  "keywords": [
    "svelte",
    "runes",
    "sveltekit",
    "ui"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "svelte": "./dist/index.js"
    }
  }
}